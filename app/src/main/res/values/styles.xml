<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="main_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:fontFamily">@font/dm_sans_bold</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="sub_text">
        <item name="android:layout_width">289dp</item>
        <item name="android:layout_height">54dp</item>
        <item name="android:layout_marginTop">81dp</item>
        <item name="android:fontFamily">@font/dm_sans_medium</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#9E9E9E</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">26dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingStart">48dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:paddingEnd">48dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/dm_sans_medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/round</item>
    </style>
</resources>